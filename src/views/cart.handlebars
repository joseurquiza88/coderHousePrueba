
{{!-- Carrito de compras --}}
<div class="container mt-5">
   <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/api/products">Volver</a>
                </div>
            </nav>
        </div>
    </div>
  <h4>Tu carrito</h4>
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Carrito {{_id}}</h4>
          <button type="button" class="btn btn-info button-finish-purchase" id="{{this._id}}"> Desea finalizar su compra?</button>
          {{#each products}}
            <ul class="list-group">
              <li class="list-group-item">
                <h5 class="card-subtitle mb-2 text-muted">ID del producto:{{this._id}}</h5>
                <p class="card-text">Nombre: {{this.name}}</p>
                <p class="card-text">Precio: {{this.price}}</p>
                <p class="card-text">Cantidad: {{this.quantity}}</p>
              </li>
            </ul>
          {{/each}}
          <h5 class="card-title">Total {{this.total}}</h5>
          {{#unless this.products.length}}
            <p class="mt-3">Carrito vacio</p>
          {{/unless}}
        </div>
      </div>
    </div>

  </div>
</div>


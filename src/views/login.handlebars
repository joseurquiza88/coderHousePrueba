<div class="login-container">
  <form id="login-form" class="login-form">
    <h2>Bienvenidos al e-commerce!</h2>
    <h3>Iniciar sesión</h3>
    <div class="form-group">
      <label for="username">Usuario:</label>
      <input type="text" id="username" name="username" required />
    </div>
    <div class="form-group">
      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="password" required />
    </div>
    <button id="login" type="submit">Ingresar</button>
    <a class="a-forgot" href="/forgot">¿Haz olvidado tu contraseña?</a>
    <a class="a-signup" href="/signup">¿Aun no tienes cuenta?</a>
    <a class="a-restore" href="/restorepassword">Restablecer contraseña</a>
  </form>
  <a href="/api/session/github">
    <button>Login con Github</button>
  </a>
</div>
<script src="/js/login.js"></script>